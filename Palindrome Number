class Solution {
public:
    bool isPalindrome(int x) {
        string palindrome = to_string(x); 
        string reverse = ""; 
        for(int i = palindrome.length() -1 ; i >= 0; i--){
            reverse += palindrome[i]; 
        }
        if(reverse == palindrome){
            return true; 
        }
        return false; 
    }
};
